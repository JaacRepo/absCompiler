die() {
  echo >&2 "$@" 
  echo >&2 "Usage: $0 jar-file <absfiles>"
  exit 1
}

[[ $# -ge 1 ]] || die "Please provide the name of the ABS package to be created"

MANIFEST=`mktemp`
echo 'ABS-Package-Version: 1.0' >> $MANIFEST
jar cfm "$1" $MANIFEST $@

rm $MANIFEST
